<h1>Добавить новый курс</h1>

<form action="/add" method="post">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required>
        <label for="title">Courses' name</label>
        <span class="helper-text" data-error="Add name"></span>
    </div>

    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" required min="1">
        <label for="price">Price courses</label>
        <span class="helper-text" data-error="Add price"></span>
    </div>

    <div class="input-field">
        <input name="img" id="img" type="text" class="validate"required>
        <label for="img">Image's URL</label>
        <span class="helper-text" data-error="Add URL"></span>
    </div>

    <button class="btn btn-primary">Add course</button>
</form>